  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />

    <title>TheGrapestCollections</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/stylesheets/main.css" />
  </head>
    <% if flash[:error] %>
    <nav><%= flash[:error] %></nav>
    <% end %>
  
  <body>
    <% if !logged_in? %>
    <div class="topnav">
      <a class="active" href="/">Home</a>
      <a href="/users/new">Signup</a>
      <div class="login-container">
        <form action="/login" method="POST">
          <input type="text" placeholder="Username" name="username">&nbsp;
          <input type="password" placeholder="Password" name="password">&nbsp;&nbsp;
          <button type="submit">Login</button>
        </form>
      </div>
    </div>

    <% else @user == current_user %>

    <div class="topnav">
    <div class="dropdown">
      <button class="dropbtn"><%= current_user.username %>'s, Collection Menu</button>
      <div class="dropdown-content">
        <a href="/users/collection">My Collection</a>
        <a href="/bottles/new">Add Bottle To Collection</a>
        <a href="/bottles">Bottle Index</a>
        <a href="/logout">Logout</a>
        <a href="/users/<%= current_user.id %>">Delete Collection</a>
      </div> 
    </div>
    <% end %>

        <%= yield %>

      <footer class="branding">
        <small>&copy; 2020 <strong>TheGrapestCollections</strong></small>
      </footer>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
    <!--[if lt IE 7]>
      <script src="//ajax.googleapis.com/ajax/libs/chrome-frame/1.0.2/CFInstall.min.js"></script>
      <script>window.attachEvent("onload",function(){CFInstall.check({mode:"overlay"})})</script>
    <![endif]-->
  </body>
</html>
