<% if !@bottle.user_id == current_user.id %>
<strong>You do not have permission to edit this bottle.</strong>
<% end %>
<h1>Edit Collection</h1>
<form method="POST" action="/bottles/<%= @bottle.id %>">
  <input type="hidden" id="hidden" name="_method" value="PATCH">
  <br>
  Name: <input type="text" name="bottle[wine_type]" value="<%= @bottle.name %>">
  <br>
  Grape: <input type="text" name="bottle[grape]" value="<%= @bottle.grape %>">
  <br>
  Style: <input type="text" name="bottle[style]" value="<%= @bottle.style %>">
  <br>
  Vintage: <input type="text" name="bottle[vintage]" value="<%= @bottle.vintage %>">
  <br>
  Price: <input type="text" name="bottle[price]" value="<%= @bottle.price %>">
  <br>
  <input type="submit" value="Edit Bottle">
</form>
<%binding.pry%>
